FROM {{ .image }}

ADD start.sh /app/start.sh

RUN apt-get update && \
	apt-get install -y curl {{ .openjdk }} && \
	apt-get clean

RUN cd /app && \
	chmod 0755 start.sh && \
	curl -o server.jar '{{ .serverJarURL }}' && \
	echo "{{ .sha256 }}  server.jar" > CHECKSUMS && \
	sha256sum -c CHECKSUMS

ENTRYPOINT [ "/app/start.sh" ]
